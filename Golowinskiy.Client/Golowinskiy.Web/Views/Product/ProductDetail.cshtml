@model Golowinskiy.Web.Models.Product.ProductDetailViewModel

<link rel="stylesheet" href="~/css/detail-page-components.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div id="detail-page" class="detail_product">
    <div class="close">
        <i class="fa fa-times" aria-hidden="true" onclick="closeWindow()"></i>
    </div>
    <div class="detail_product_item detail_product_item_left">
        <div class="detail_product_item_images">
            <div class="arrows prew">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
            </div>
            <div class="image">
                <img src="@Model.MainImageLink" id="mainImg">
            </div>
            <div class="arrows next" onclick="showNextProduct()">
                <i class="fa fa-chevron-right" aria-hidden="true"></i>
            </div>
        </div>

        <div class="detail_product_item_main_information">
            <div class="text">
                <h4>@Model.ProductName</h4>
                <p>@Model.Price руб.</p>
            </div>

            <div class="change">
                <div class="edit">
                    <span>Редактировать</span>
                </div>

                <div class="delete">
                    <span>Удалить</span>
                </div>
            </div>

            <div>
                <div class="basketShop" onclick="putInBasket(this)">
                    <img src="~/images/white-cart.png">
                    <span>В корзину</span>
                </div>
                <div class="basketShop in_cart">
                    <i class="fa fa-check"></i>
                    <span>В корзине</span>
                </div>
            </div>
        </div>
    </div>

    <div class="detail_product_item detail_product_item_right">
        <h4>@Model.ProductName</h4>
        <p></p>
          
        <div class="additional_images">
            <div class="images">
                @foreach (var img in Model.AdditionalImagesLink)
                {
                    <img src="@img" onmouseover="showAddtImage('@img')" onmouseout="showAddtImage('@Model.MainImageLink')">
                }
            </div>
        </div>

        <div class="description" id="show_description">
            <p>@Model.Description</p>
            <h6>Контакты</h6>
            <div class="phone">
                <i class="fa fa-phone" aria-hidden="true"></i>
                <span>@Model.Phone</span>
            </div>
            <div class="email">
                <i class="fa fa-envelope-o" aria-hidden="true"></i>
                <span>@Model.Email</span>
            </div>
        </div>

        <div class="application">
            <img src="~/images/app1.png">
            <img src="~/images/app2.png">
        </div>
    </div>
</div>
