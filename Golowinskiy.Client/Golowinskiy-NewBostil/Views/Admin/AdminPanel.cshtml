@model List<Golowinskiy_NewBostil.Models.Admin.AdminPanelViewModel>

@{
    ViewData["Title"] = "AdminPanel";
}

<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="stylesheet" href="~/css/admin.css" />

<div class="showSpinner">
    <i class="fa fa-spinner fa-spin"></i>
</div>
<div class="dropdownUL">
<h4>Список пользователей</h4>
<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item" onclick="GetUserProducts('@item.UserId')">
            <i class="fa fa-user" aria-hidden="true"></i>@item.UserName
        </li>
        <li class="list-group-item">
            @item.CountProducts
        </li>
        <li class="list-group-item">
            @item.Coefficient
        </li>
    }
</ul>
    </div>
<script src="~/js/admin.js"></script>
